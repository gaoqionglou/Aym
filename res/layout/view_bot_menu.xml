<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="17dp"
            android:src="@drawable/ic_center48" />

        <ImageView
            android:id="@+id/iv_vote"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/iv_center"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/iv_center"
            android:src="@drawable/ic_vote48"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@+id/iv_vote"
            android:layout_alignLeft="@+id/iv_center"
            android:layout_marginBottom="14dp"
            android:src="@drawable/ic_edit48"
            android:visibility="gone" />

</RelativeLayout>
