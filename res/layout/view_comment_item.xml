<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:orientation="vertical" >
<RelativeLayout 
    android:id="@+id/comment_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >
    <ImageView 
        android:id="@+id/com_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/f1"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        >
        
    </ImageView>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/com_icon"
        >

        <TextView
            android:id="@+id/com_msg"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="哈哈哈哈哈哈哈啊哈哈哈哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈"
            android:layout_margin="5dp"
            android:textSize="@dimen/txt_samll_size" />

        <TextView 
            android:id="@+id/com_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@+id/com_msg"
            android:layout_below="@+id/com_msg"
            android:layout_margin="5dp"
            android:text="2014-10-30发布"
            android:textSize="14px"
            />
        <TextView
            android:id="@+id/lou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1楼"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_comment_floor"
            />
  <!--     <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/com_msg"
          >
            <TextView
            android:id="@+id/lou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1楼"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />
      </RelativeLayout> -->
    </RelativeLayout>
</RelativeLayout>    

</LinearLayout>
